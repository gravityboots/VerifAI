{
  "manifest_version": 3,
  "name": "VerifAI",
  "version": "1.0",
  "description": "Check if selected text is misinformation.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:5000/verify"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}
